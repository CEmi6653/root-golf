<%= render partial: "shared/second-header" %>
<div class="form-area">
    <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
    <div class='form-wrap'>
      <div class='form-header'>
        <h1 class='form-header-text'>
          Enter member information
        </h1>
      </div>

  
      <%= render 'shared/error_messages', model: f.object %>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">nickname</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) furima太郎 8文字以内", maxlength:"8" %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">Email</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">Password</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
        <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">password_confirmation</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
      </div>
      <div class="player-detail">
        <div class="form-text">Player skill</div>
        <div class="form">
          <div class="form-text">
            気にする環境
            <span class="indispensable">必須</span>
          </div>
          <%= f.collection_select(:play_style_id, PlayStyle.all, :id, :name, {}, {class:"select-box", id:"play-style"}) %>
          <div class="form-text">
            プレー歴
            <span class="indispensable">必須</span>
          </div>
          <%= f.collection_select(:play_histry_id, PlayHistry.all, :id, :name, {}, {class:"select-box", id:"play-histry"}) %>
          <div class="form-text">
            出身地
            <span class="indispensable">必須</span>
          </div>
          <%= f.collection_select(:bith_place_id, BithPlace.all, :id, :name, {}, {class:"select-box", id:"bith-place"}) %>
        </div>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
           <p class='info-text'>※ 本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。</p>
           <p class='info-text'>※ すでに登録されている情報は登録できませんのでご注意してください</p>
        </div>
      </div>
      <div class='register-btn'>
        <%= f.submit "Sign up" ,class:"register-red-btn" %>
      </div>
    </div>
    <% end %>
</div>

<%= render partial: "shared/second-footer" %>