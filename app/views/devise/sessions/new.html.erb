<header>
      
  <div class="header-area">
    <div class="heading">
      <h1 class="title">
        <%= link_to 'RootGolf', root_path, data: {"turbolinks" => false} %>
      </h1>
    </div>
  </div>
</header>
<%= form_with model: @user, url: user_session_path, class: 'registration-main', data: {"turbolinks" => false}, local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      Member information
    </h1>
  </div>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">e-mail</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">password</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
        <p class='info-text'>※ 本人情報は正しく入力してください。修正するにはお時間を頂く場合があります。</p>
    </div>
  </div>
  <div class='login-btn'>
    <%= f.submit "Login" ,class:"login-red-btn" %>
  </div>
</div>
<% end %>
<footer>
      <div class='footer'>
        <div class='footer-contents'>
          <div class='root-golf-details'>
            <h2 class='footer-content-head'>RootGolfについて</h2>
            <ul>
              <li><%= link_to 'プライバシーポリシー', "#", class: "footer-link", data: {"turbolinks" => false} %></li>
              <li><%= link_to 'RootGolf利用規約', "#", class: "footer-link", data: {"turbolinks" => false} %></li>
            </ul>
          </div>
          <div class='root-golf-details'>
            <h2 class='footer-content-head'>ゴルフ場を見る</h2>
            <ul>
              <li><%= link_to 'ゴルフ場一覧', "#", class: "footer-link", data: {"turbolinks" => false} %></li>
              <li><%= link_to 'ゴルフ場検索', "#", class: "footer-link", data: {"turbolinks" => false} %></li>
            </ul>
          </div>
          <div class='root-golf-details'>
            <h2 class='footer-content-head'>How to use</h2>
            <ul>
              <li><%= link_to 'RootGolfガイド', "#", class: "footer-link", data: {"turbolinks" => false} %></li>
              <li><%= link_to 'お知らせ', "#", class: "footer-link", data: {"turbolinks" => false} %></li>
            </ul>
          </div>
        </div>
        <%= link_to 'Lets Golf', "#", class:"logo-white", data: {"turbolinks" => false} %>

      </div>
</footer>

