<header>
  <div class="header-area">
    <div class="heading">
      <h1 class="title">
        <%= link_to 'RootGolf', root_path, data: {"turbolinks" => false} %>
      </h1>
    </div>
    <div class="navbar">
      <ul class="nav-lists" >
        <% if user_signed_in? %>
          <li><%= link_to 'Log out', destroy_user_session_path, method: :delete, class: "logout", data: {"turbolinks" => false} %></li>
          <li><%= link_to 'Edit', edit_user_path(current_user) %>
        <% else %>
          <li><%= link_to 'Login', new_user_session_path, class: "login" %></li>
          <li><%= link_to 'sign up', new_user_registration_path, class: "sing-up" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>